# Redirect HTTP to HTTPS if needed
server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;
    server_name _;

    # Redirect to HTTPS
    return 301 https://$host$request_uri;
}

# Configuration for HTTP (port 80)
server {
    listen 80;
    listen [::]:80 ipv6only=on;

    # Use IP of server as domain name
    server_name 100.25.33.181;

    # Customize HTTP response header
    add_header X-Served-By 318139-web-01;

    # 404 error page
    error_page 404 /404.html;
    location /404 {
        root /var/www/html;
        internal;
    }
}

# Configuration for HTTPS (port 443)
server {
    listen 443 ssl default_server;
    listen [::]:443 ssl default_server ipv6only=on;

    # Use IP of server as domain name
    server_name 104.196.168.90;

    # SSL configuration (replace with your SSL certificate paths)
    ssl_certificate /path/to/your/certificate.pem;
    ssl_certificate_key /path/to/your/private-key.pem;

    # Other SSL configurations...

    # Serve content from Gunicorn on port 5003
    location / {
        proxy_pass http://127.0.0.1:5003/;
        include /etc/nginx/proxy_params;
        proxy_redirect off;
        proxy_buffering off;
    }

    # Serve static assets
    location /static/ {
        alias /path/to/your/AirBnB_clone_v4/web_dynamic/static/;
    }
}
